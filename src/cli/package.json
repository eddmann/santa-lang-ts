{
  "name": "santa-cli",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "santa-lang": "file:../lang"
  },
  "scripts": {
    "start": "bun run ./src/index.ts",
    "compile": "bun build ./src/index.ts --outfile=build/cli.js --target=bun",
    "package:binary": "bun build ./src/index.ts --compile --outfile=dist/santa-cli",
    "package:all": "mkdir -p dist && bun run package:macos-amd64 && bun run package:macos-arm64 && bun run package:linux-amd64 && bun run package:linux-arm64",
    "package:macos-amd64": "bun build ./src/index.ts --compile --target=bun-darwin-x64 --outfile=santa-cli-macos-amd64 && mv santa-cli-macos-amd64 dist/",
    "package:macos-arm64": "bun build ./src/index.ts --compile --target=bun-darwin-arm64 --outfile=santa-cli-macos-arm64 && mv santa-cli-macos-arm64 dist/",
    "package:linux-amd64": "bun build ./src/index.ts --compile --target=bun-linux-x64 --outfile=santa-cli-linux-amd64 && mv santa-cli-linux-amd64 dist/",
    "package:linux-arm64": "bun build ./src/index.ts --compile --target=bun-linux-arm64 --outfile=santa-cli-linux-arm64 && mv santa-cli-linux-arm64 dist/",
    "test": "bun test"
  }
}
