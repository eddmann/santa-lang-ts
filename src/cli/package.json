{
  "name": "santa-cli",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "deasync": "^0.1.28",
    "esbuild": "^0.14.42",
    "esbuild-jest": "^0.5.0",
    "jest": "^28.1.0",
    "node-fetch": "^3.2.10",
    "santa-lang": "file:../lang"
  },
  "devDependencies": {
    "pkg": "^5.3.1"
  },
  "scripts": {
