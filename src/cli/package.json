    "package:binary": "pkg --config=pkg.json --output dist/santa-cli build/cli.js",
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "esbuild-jest",
        {
          "sourcemap": true
        }
      ]
    }
  }
